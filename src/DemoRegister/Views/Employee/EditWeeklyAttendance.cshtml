@model WeeklyAttendanceViewModel

@{
    var weekStartDate = @Model.WeekStartDate.ToString("MMMM dd, yyyy");
    var employeeId = Model.EmployeeId;
}

<h2>Edit Attendance for Week: @Model.WeekStartDate.ToString("MMMM dd, yyyy") - @Model.WeekStartDate.AddDays(4).ToString("MMMM dd, yyyy")</h2>

<form asp-action="SaveWeeklyAttendance" method="post">
    <input type="hidden" asp-for="@employeeId" />
    <input type="hidden" asp-for="@weekStartDate" />

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time In</th>
                <th>Time Out</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.WeeklyAttendance.Count; i++)
            {
                <tr>
                    <td><input type="date" asp-for="@Model.WeeklyAttendance[i].Date" class="form-control" /></td>
                    <td><input type="time" asp-for="WeeklyAttendance[i].TimeIn" class="form-control" /></td>
                    <td><input type="time" asp-for="WeeklyAttendance[i].TimeOut" class="form-control" /></td>
                    <td><input type="text" asp-for="WeeklyAttendance[i].Status.StatusType" class="form-control" /></td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save Attendance</button>
</form>
